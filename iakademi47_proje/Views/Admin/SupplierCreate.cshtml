@model Supplier


@{
    ViewData["Title"] = "SupplierCreate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="row" style="margin-top:50px;">



    <div class="col-md-2"></div>



    <div class="col-md-8">



        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> MARKA GİRİŞ FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" asp-action="SupplierCreate" method="post">



                    <div class="form-body">


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="BrandName"></label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-lg" placeholder="Marka Adı" asp-for="BrandName" required maxlength="50">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhotoPath" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input type="file" asp-for="PhotoPath" class="form-control input-lg" required>
                            </div>
                            <span asp-validation-for="PhotoPath" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Active" class="col-md-3 control-label">Aktif Mi?</label>
                            <div class="col-md-9">
                                <input type="checkbox" asp-for="Active" class="form-control input-lg" />
                            </div>
                        </div>



                    </div>
                    <div class="form-actions right1">
                        <a asp-action="SupplierIndex" class="btn btn-primary">MARKA LİSTESİ</a>



                        <input type="submit" class="btn green" value="KAYDET" />
                    </div>



                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->




    </div>
</div>
